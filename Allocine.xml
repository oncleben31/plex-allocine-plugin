	<crop x="5" y="5" width="720" height="540" />
	
	<seekbar type="simple">
		<start x="228" y="565" />
		<end   x="363" y="565" />
 		<played>
   			<color rgb="000000" />
		</played>
	</seekbar>
	
	<condition name="paused">
 		<!-- Regular paused -->
   		<color x="176"  y="563" rgb="9e9e9e" />
	</condition>
	
	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="172" y="563" />
			</action>
		</event>		
		
		<!-- Detect paused video -->
 		<event>
 			<condition>
   				<condition name="paused" />
 			</condition>
 			<action>
   				<goto state="paused" />
 			</action>
 		</event>
	</state>

	
	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
				<click x="172" y="563" />
				<goto state="playing" />
			</action>
		</event>
		<event>
 			<condition>
   				<not>
   					<condition name="paused" />
   				</not>
 			</condition>
 			<action>
   				<goto state="playing" />
 			</action>
 		</event>
	</state>
	
	
